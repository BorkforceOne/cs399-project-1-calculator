<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_calculation_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tbgsinc.cs399_calculator.CalculationScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/equationView"
        android:layout_alignParentEnd="true"
        android:textSize="32sp"
        android:background="@color/colorButtonNumber"
        android:textColor="#000000"
        android:maxLines="1"
        android:gravity="right"
        android:padding="10dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/equationView">

        <Button
            android:text="/"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonDivide"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="*"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonMultiply"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="-"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonSubtract"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="+"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonAdd"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="."
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonDot"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="Back"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonBack"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="^"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonPow"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text=")"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonSqrt"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="("
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonLBracket"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:text="9"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="8"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="7"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="0"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button0"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="6"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button6"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="5"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button5"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="4"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button4"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="3"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="2"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button2"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button1"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="="
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/buttonEquals"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="onTap"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </GridLayout>


</RelativeLayout>
